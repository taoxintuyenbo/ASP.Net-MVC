@model BaiBaoCao_ASP.Models.UserProfileViewModel

@{
    ViewBag.Title = "Hồ Sơ Người Dùng";
}

<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="card-title mb-0">Hồ Sơ Người Dùng</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p><strong>Họ:</strong> @Model.User.firstname</p>
                                <p><strong>Tên:</strong> @Model.User.lastname</p>
                                <p><strong>Tên Đăng Nhập:</strong> @Model.User.username</p>
                                <p><strong>Giới Tính:</strong> @Model.User.gender</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Điện Thoại:</strong> @Model.User.phone</p>
                                <p><strong>Email:</strong> @Model.User.email</p>
                                <p><strong>Địa Chỉ:</strong> @Model.User.address</p>
                                <p><strong>Vai Trò:</strong> @Model.User.roles</p>
                            </div>
                        </div>
                        <div class="text-center">
                            @using (Html.BeginForm("Logout", "User", FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-danger btn-lg">Đăng Xuất</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
